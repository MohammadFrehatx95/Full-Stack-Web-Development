#region Homework1
try
{
    string StrName,StrAge,StrSalary;

    Console.WriteLine("Please Enter Your Name");
    StrName = Console.ReadLine();

    Console.WriteLine("Please Enter Your Age");
    StrAge = Console.ReadLine();

    Console.WriteLine("Please Enter Your Salary");
    StrSalary = Console.ReadLine();



    int IntAge = int.Parse(StrAge);
    decimal DecSalary = decimal.Parse(StrSalary);

    Console.WriteLine("Hello {" + StrName + "}!");
    Console.WriteLine("Your Age : {" + IntAge + "}");
    Console.WriteLine("Your Monthly Salary : {" + DecSalary + "}");
    Console.WriteLine("Your Yearly Salary : {" + DecSalary * 12 + "}");

    Console.WriteLine(DecSalary >= 600 ? "Your Salary is Above Average" : "Your Salary is Below Average");
}
catch (FormatException)
{
    Console.WriteLine("Not A Correct Format for Age or Salary");
}
catch (OverflowException)
{
    Console.WriteLine("Salary is not Correct");
}
catch (Exception ex)
{
    Console.WriteLine(ex.Message);
}
#endregion
