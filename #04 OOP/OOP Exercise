using System.Numerics;
public class Program
{
    public static void Main()
    {
        Vehicle car = new Vehicle("Ahmed", "Toyota Corolla", 120);
        SUV suv = new SUV("Mohammad", "Nissan Patrol" , 200);
        MotorCycle motor = new MotorCycle("Raghad", "Yamaha R1", 80);

        Console.WriteLine($"Total Price of Vehicle: {car.CalculateTotalPrice()}");
        Console.WriteLine($"Total Price of SUV: {suv.CalculateTotalPrice()}");
        Console.WriteLine($"Total Price of MotorCycle : {motor.CalculateTotalPrice()}");

        suv.ShowInfo();
        motor.ShowInfo();
        Console.WriteLine($"Total Vehicles Rented: {Vehicle.VehicleCount}");

    }
}

public class Vehicle
{
    public Vehicle(string ownerName, string modelName, int hours)
    {
        OwnerName = ownerName;
        ModelName = modelName;
        Hours = hours;
        VehicleCount += 1;
    }
        
    protected decimal BasePrice { get; set; } = 20;
    public static int VehicleCount { get; set; } = 0;
    public string OwnerName { get; set; }
    public string ModelName { get; set; }
    public int Hours {  get; set; }
    

    public virtual decimal CalculateTotalPrice()
    {
        var totalPrice = BasePrice * Hours;
        return totalPrice;
    }

}

public class SUV : Vehicle, IInfoDisplay
{
    public SUV(string ownerName, string modelName, int hours) : base(ownerName, modelName, hours) 
    { 
    
    }

    public override decimal CalculateTotalPrice()
    {
        var totalPrice = ((BasePrice + 10) * Hours);
        return totalPrice;
    }

    public void ShowInfo() 
    {
        Console.WriteLine($"[SUV] Owner: {OwnerName}, Model: {ModelName}, Hours: {Hours}, Fee: {CalculateTotalPrice()}");
    }
}

public class MotorCycle : Vehicle, IInfoDisplay
{
    public MotorCycle(string ownerName, string modelName, int hours) : base(ownerName, modelName, hours)
    {

    }
    public override decimal CalculateTotalPrice()
    {
        var totalPrice = ((BasePrice - 5) * Hours);
        return totalPrice;
    }
    public void ShowInfo()
   {
       Console.WriteLine($"[MC] Owner: {OwnerName}, Model: {ModelName}, Hours: {Hours}, Fee: {CalculateTotalPrice()}");
   }
}

public interface IInfoDisplay
{
    void ShowInfo() 
    {

    } 

}
